{% extends 'base_template.html.twig' %}

{% block title %}
	{{constantes.application.website_name}}
	- Gestion des Jeux
{% endblock %}


{% block body %}
	<div class="container mt-5">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h1>Gestion des Jeux</h1>
			<a href="index.php?controleur=admin&methode=dashboard" class="btn btn-outline-secondary">Retour Dashboard</a>
		</div>

		<div class="table-responsive">
			<table class="table table-striped border shadow-sm">
				<thead class="table-dark">
					<tr>
						<th class="text-nowrap">Image</th>
						<th class="text-nowrap">Nom</th>
						<th class="text-nowrap">Joueurs</th>
						<th class="text-nowrap text-end">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for jeu in jeux %}
						<tr>
							<td>
								{% if jeu.url %}
									<img src="images/vignettes/{{ jeu.url }}" width="50" class="rounded">
								{% else %}
									<span class="text-muted">No image</span>
								{% endif %}
							</td>
							<td>
								<strong>{{ jeu.nom }}</strong>
							</td>
							<td>{{ jeu.nbJoueursMin }}
								-
								{{ jeu.nbJoueursMax }}</td>
							<td class="text-nowrap text-end">
								<a href="index.php?controleur=admin&methode=formulaireModif&id={{ jeu.idJeu }}" class="btn btn-sm"><i class="bi bi-pencil-square"></i></a>
								<a href="index.php?controleur=admin&methode=supprimerJeu&id={{ jeu.idJeu }}" class="btn btn-sm btn-danger ms-2" onclick="return confirm('Supprimer {{ jeu.nom }} ?')"><i class="bi bi-trash"></i></a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="mt-4">
			<a href="index.php?controleur=admin&methode=dashboard" class="btn btn-outline-secondary">Retour Dashboard</a>
		</div>
	</div>
{% endblock %}
