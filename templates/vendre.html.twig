{% extends 'base_template.html.twig' %}

{% block title %}
	Vente
{% endblock %}

{% block body %}
	<main>
		<form type="GET" class="row g-3">
			<h1>Vendre</h1>

			<label for="nomJeu" class="form-label">Nom du jeu</label>
			<input type="text" class="form-control" id="nomJeu" placeholder="Entrez le nom du jeu">

			<label for="descriptionAnnonce" class="form-label">description</label>
			<input type="text" class="form-control" id="nomJeu" placeholder="Desciption de l'annonce">

			<label for="nomJeu" class="form-label">Prix</label>
			<input type="int" class="form-control" id="nomJeu" placeholder="12.50">

			<label for="inputState" class="form-label">Etat du jeu</label>
