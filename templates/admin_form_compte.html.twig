{% extends 'base_template.html.twig' %}

{% block title %}{{constantes.application.website_name}} - Modification d'un utilisateur{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="card shadow col-md-8 mx-auto">
        <div class="card-header bg-warning">
            <h2 class="mb-0">Modifier le compte #{{ compte.idCompte }}</h2>
        </div>
        <div class="card-body">
            <form action="index.php?controleur=admin&methode=modifierCompte" method="POST">
                <input type="hidden" name="idCompte" value="{{ compte.idCompte }}">

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Prénom</label>
                        <input type="text" name="prenom" class="form-control" value="{{ compte.prenom }}" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nom</label>
                        <input type="text" name="nom" class="form-control" value="{{ compte.nom }}" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" value="{{ compte.email }}" required>
                </div>

                <div class="mb-4">
                    <label class="form-label">Rôle</label>
                    <select name="role" class="form-select">
                        <option value="utilisateur" {{ compte.role == 'utilisateur' ? 'selected' : '' }}>Utilisateur</option>
                        <option value="administrateur" {{ compte.role == 'administrateur' ? 'selected' : '' }}>Administrateur</option>
                        <option value="administrateur" {{ compte.role == 'administrateur' ? 'selected' : '' }}>Modérateur</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="index.php?controleur=admin&methode=listeComptes" class="btn-outline-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Mettre à jour le compte</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}