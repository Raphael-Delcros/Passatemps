{% extends "base_template.html.twig" %}
{% block title %}
	{{constantes.application.website_name}}
	- Newsletter
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card p-4 shadow-sm">
					<h2 class="card-title mb-4 text-center ">Inscription à la newsletter</h2>
					<form method="POST" action="index.php?controleur=newsletter&methode=inscriptionNewsletter" autocomplete="off">
						<div class="mb-3">
							<label for="email" class="form-label required">Email</label>
							<input type="email" class="form-control shadow-sm" id="email" name="email" placeholder="Entrez votre email" title="Entrez votre email" minlength="5" maxlength="254" pattern={{ constantes.regex.email }} required>
						</div>
						<div>
							<input type="checkbox" class="form-check-input" id="accepterNewsletter" name="accepterNewsletter" required>
							<label for="accepterNewsletter" class="form-check-label required">Je souhaite recevoir par mail les dernières nouvelles.</label>
						</div>
						<div>
							<input type="checkbox" class="form-check-input" id="accepterConfidentialite" name="accepterConfidentialite" required>
							<label for="accepterConfidentialite" class="form-check-label required">J'ai lu la
								<a href="legal.php#politique-confidentialite" class="text-secondary">politique de confidentialité</a>
								de Passatemps.</label>
						</div>
						<div class="d-grid">
							<button type="submit" class="btn btn-primary mt-2">S'inscrire à la newsletter</button>
						</div>

					</form>
					{% if errors is defined and errors|length > 0 %}
						<div class="alert alert-danger mt-3">
							<ul class="mb-0">
								{% for error in errors %}
									<li>{{ error }}</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
