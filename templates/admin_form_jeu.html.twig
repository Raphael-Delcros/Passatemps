{% extends 'base_template.html.twig' %}

{% block title %}{{constantes.application.website_name}} - Modification de {{jeu.nom}}{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header primary bg-primary">
            <h2>Modifier le jeu : {{ jeu.nom }}</h2>
        </div>
        <div class="card-body">
            <form action="index.php?controleur=admin&methode=modifierJeu" method="POST">
                {# CHAMP CACHÉ POUR L'ID #}
                <input type="hidden" name="idJeu" value="{{ jeu.idJeu }}">
                <input type="hidden" name="idPhoto" value="{{ jeu.idPhoto }}">
                <input type="hidden" name="url" value="{{ jeu.url }}">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nom du jeu</label>
                        <input type="text" name="nom" class="form-control" value="{{ jeu.nom }}" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Durée de partie</label>
                        <input type="text" name="dureePartie" class="form-control" value="{{ jeu.dureePartie }}">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Description courte</label>
                    <textarea name="description" class="form-control" rows="2">{{ jeu.description }}</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Contenu de la boîte (matériel)</label>
                    <textarea name="contenu" class="form-control" rows="3">{{ jeu.contenu }}</textarea>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Joueurs Min</label>
                        <input type="number" name="nbJoueursMin" class="form-control" value="{{ jeu.nbJoueursMin }}">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Joueurs Max</label>
                        <input type="number" name="nbJoueursMax" class="form-control" value="{{ jeu.nbJoueursMax }}">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Date de sortie</label>
                        <input type="date" name="dateSortie" class="form-control" value="{{ jeu.dateSortie }}">
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="index.php?controleur=admin&methode=listeJeux" class="btn btn-outline-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}